

<% include layout %>
<div class="row">
  <div class="page-header">
    <h1>Categorias</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Lista de categorias</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tbody data-bind="foreach: categorias">
        <tr>
          <td data-bind="text: idCategoria"></td>
          <td data-bind="text: nombreCategoria"></td>
          <td>
            <div class="btn-group"> <button style="margin-right:20px;" class="btn btn-outline-warning waves-effect"
                    data-toggle="modal"
                    data-target="#modalEditarCategoria"
                    data-bind="click: $root.editar">
                    Editar </button>
                    <button style="margin-right:20px;" class="btn btn-outline-danger waves-effect" 
                        data-bind="click: $root.eliminar" onclick="location.href = 'http://localhost:3000/categorias';">Eliminar</button>
                    </div>
                </td>
        </tr>
      </tbody>
    </table>
    <button type="button" class="btn btn-danger waves-effect" data-toggle="modal" data-target="#modalCategoria">
        Agregar
    </button>
    <div class="modal fade" id="modalCategoria" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="/categorias" method="post">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Agregar</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="nombreCategoria">Nombre</label>
                            <input type="text" class="form-control" name="nombreCategoria" id="nombreCategoria"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>








  </div>
</div>
<% include footer %>
<script src="/javascripts/categoriaCliente.js"></script>
